<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="co.notifie.app"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="15" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <permission
        android:name="co.notifie.app.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="co.notifie.testapp.permission.C2D_MESSAGE" />

    <meta-data
        android:name="co.notifie.app.version"
        android:value="@integer/google_play_services_version" />
    <meta-data
        android:name="com.google.android.gms.version"
        android:value="@integer/google_play_services_version" />

    <!--
     To retrieve OAuth 2.0 tokens or invalidate tokens to disconnect a user. This disconnect
     option is required to comply with the Google+ Sign-In developer policies
    -->
    <uses-permission android:name="android.permission.USE_CREDENTIALS" /> <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <android:uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />
    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <android:uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />

    <application
        xmlns:tools="http://schemas.android.com/tools"
        android:name=".Notifie"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.NoActionBarColorStatusBar"
        tools:replace="android:icon,android:theme" >
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name=".MainActivity"
            android:launchMode="singleTop"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DisplayMessageActivity"
            android:label="@string/title_activity_display_message"
            android:parentActivityName=".MainActivity"
            android:theme="@style/CustomActionBarTheme"
            android:windowSoftInputMode="stateHidden" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="co.notifie.app.SwipeActivity" />
        </activity>
        <activity
            android:name=".DisplayClientActivity"
            android:label="@string/title_activity_display_client"
            android:parentActivityName=".SwipeActivity"
            android:theme="@style/CustomActionBarTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="co.notifie.app.SwipeActivity" />
        </activity>

        <receiver
            android:name=".GcmBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />

                <category android:name="co.notifie.testapp" />
            </intent-filter>
        </receiver>

        <service android:name=".GcmMessageHandler" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".TabActivity"
            android:label="@string/title_activity_tab" >
        </activity>
        <activity
            android:name=".SwipeActivity"
            android:label="@string/title_activity_swipe"
            android:theme="@style/Theme.NoActionBarColorStatusBar" >
        </activity>
        <activity
            android:name=".SpinnerActivity"
            android:label="@string/title_activity_spinner" >
        </activity>
        <activity
            android:name=".SignUpActivity"
            android:label="@string/title_activity_sign_up"
            android:parentActivityName=".MainActivity"
            android:theme="@style/TransparentActionBarWithSlide" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="co.notifie.app.MainActivity" />
        </activity>
        <activity
            android:name=".ConfirmationActivity"
            android:label="@string/title_activity_confirmation"
            android:theme="@style/TransparentActionBarWithSlide" >
        </activity>
        <activity
            android:name=".UploadPhotoActivity"
            android:label="@string/title_activity_upload_photo"
            android:theme="@style/TransparentActionBarWithSlide" >
        </activity>
        <activity
            android:name=".SignInActivity"
            android:label="@string/title_activity_sign_in"
            android:parentActivityName=".MainActivity"
            android:theme="@style/TransparentActionBarWithSlide" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="co.notifie.app.MainActivity" />
        </activity>
        <activity
            android:name="com.facebook.LoginActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
            android:name=".AskActivity"
            android:label="@string/title_activity_ask"
            android:theme="@style/CustomActionBarTheme"
            android:parentActivityName=".SwipeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="co.notifie.app.SwipeActivity" />
        </activity>
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="323f4d7c36495858751d4df0e8a01dcb389ca0f2" />
    </application>

</manifest>
