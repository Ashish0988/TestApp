<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/abc_action_bar_progress_bar_size"
    android:paddingBottom="@dimen/activity_vertical_margin"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    tools:context="co.notifie.app.SignInActivity">

    <ScrollView android:id="@+id/login_form" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout android:id="@+id/email_login_form" android:layout_width="match_parent"
            android:padding="16dp"
            android:layout_height="wrap_content" android:orientation="vertical">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:met_baseColor="@color/white"
                app:met_floatingLabel="highlight"
                android:maxLines="1"
                android:singleLine="true"
                android:inputType="textEmailAddress"
                app:met_primaryColor="@color/white"
                app:met_floatingLabelText="Email"
                app:met_errorColor="#ddaa00"
                android:hint="Email"/>


            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:met_baseColor="@color/white"
                app:met_floatingLabel="highlight"
                android:maxLines="1"
                android:singleLine="true"
                android:inputType="textPassword"
                app:met_primaryColor="@color/white"
                app:met_floatingLabelText="Password"
                app:met_errorColor="#ddaa00"
                android:hint="Password"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom
                    ="16dp"
                >

            </LinearLayout>

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/sign_in_button"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="9dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="9dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                fancy:borderColor="#FFFFFF"
                fancy:borderWidth="1dp"
                fancy:defaultColor="@color/clear"
                fancy:focusColor="@color/black_alpha10"
                fancy:iconPosition="left"
                fancy:radius="2dp"
                fancy:text="LOG IN"
                fancy:textColor="#FFFFFF" />

        </LinearLayout>
    </ScrollView>


</RelativeLayout>
