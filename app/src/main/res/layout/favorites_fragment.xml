<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/actionbar_background_alpha05"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="co.notifie.app.FavoritesFragment">


        <ListView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/favorites_listview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/actionbar_background_alpha05"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingTop="20dp"
            android:clipToPadding="false"
            android:divider="@color/light_gray"
            android:dividerHeight="0.5dp"
            />

    <ViewStub
        android:id="@+id/favorites_empty_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="70dp"
        android:layout="@layout/empty" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:background="@color/header_background_color"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/favorites_header_text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Все сообщения (38)"
            android:layout_gravity="right"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:textColor="@color/black_alpha50"
            android:maxLines="1"
            android:textStyle="normal"
            android:textSize="10dp" />
    </LinearLayout>


</RelativeLayout>
