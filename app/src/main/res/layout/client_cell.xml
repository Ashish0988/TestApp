<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/list_item_selector"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="9dp">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/icon"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="9dp"
                android:src="@drawable/circle" />
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Client Name"
                android:textColor="@color/black"
                android:textStyle="normal"
                android:maxLines="1"
                android:layout_weight="1"
                android:ellipsize="end"
                android:layout_marginRight="16dp"
                android:layout_marginTop="7dp"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/client_legal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Client Legal"
                android:gravity="left"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="16dp"
                android:textColor="@color/black_alpha50"
                android:textStyle="normal"
                android:textSize="12dp" />

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:id="@+id/new_comments_icon"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginTop="5.5dp"
                    android:src="@drawable/unread_message" />

                <TextView
                    android:id="@+id/client_new_messages_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Сообщений (1)"
                    android:gravity="left"
                    android:layout_weight="1"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="12dp"
                    android:textColor="@color/black_alpha50"
                    android:textStyle="normal"
                    android:textSize="12dp" />

                <ImageView
                    android:id="@+id/new_comments_icon_image"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginTop="5.5dp"
                    android:src="@drawable/unread_comment" />

                <TextView
                    android:id="@+id/client_new_comments_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Комментариев (4)"
                    android:gravity="left"
                    android:layout_weight="1"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/black_alpha50"
                    android:textStyle="normal"
                    android:textSize="12dp" />

            </LinearLayout>




        </LinearLayout>



    </LinearLayout>

</LinearLayout>

