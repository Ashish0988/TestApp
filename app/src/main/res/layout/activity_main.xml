    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="40dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:background="@drawable/logo_9"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/login_text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/notifie_slogan"
            android:textColor="@color/white_alpha80"
            android:textStyle="normal"
            android:paddingTop="10dp"
            android:paddingBottom="50dp"
            android:textSize="14dp" />

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/singup_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="9dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="9dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            fancy:borderColor="#55FFFFFF"
            fancy:borderWidth="1dp"
            fancy:defaultColor="@color/clear"
            fancy:focusColor="@color/black_alpha10"
            fancy:iconPosition="left"
            fancy:radius="2dp"
            fancy:text="SIGN UP"
            fancy:textColor="#FFFFFF" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="30dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/login_text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/already_registered"
            android:textColor="@color/white_alpha80"
            android:textStyle="normal"
            android:layout_marginRight="5dp"
            android:textSize="12dp" />

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/email_sign_in_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="4dp"
            android:textStyle="normal"
            android:layout_gravity="center"
            fancy:borderColor="#55FFFFFF"
            fancy:borderWidth="1dp"
            fancy:textSize="12px"
            fancy:defaultColor="@color/clear"
            fancy:focusColor="@color/black_alpha10"
            fancy:iconPosition="left"
            fancy:radius="2dp"
            fancy:text="Sign In"
            fancy:textColor="#FFFFFF" />


    </LinearLayout>

</RelativeLayout>
